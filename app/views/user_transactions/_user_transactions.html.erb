<div class="row">
  <table class="table table-striped" id='user-transactions-table'>
    <thead>
      <tr>
        <th>Date</th>
        <th>Description</th>
        <th>Debit</th>
        <th>Credit</th>
        <th>Tags</th>
      </tr>
    </thead>
    <tbody>
      <% @user_transactions.each do |user_transaction| %>
        <%= turbo_frame_tag user_transaction do %>
          <%= render user_transaction %>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
<script>
  $('#user-transactions-table').DataTable( {
      scrollY: 500,
      paging: false
  } );
</script>
