<div class="row">
  <div class="col-sm-12">
    <h1 class='mt-3'>Your Transactions</h1>
  </div>
</div>
<div class="row">
  <div class="col-sm-9">
    <%= turbo_frame_tag 'user_transactions' do %>
      <%= render 'user_transactions' %>
    <% end %>
  </div>
  <div class="col-sm-1">&nbsp;</div>
  <div class="col-sm-2">
    <%= turbo_frame_tag 'user_tags' do %>
      <%= render 'user_tags' %>
    <% end %>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="new-tag-modal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Tag Transaction</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= turbo_frame_tag 'modal_body' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script>
  const newTagModal = new bootstrap.Modal(document.getElementById('new-tag-modal'));

  var showNewTagModal = function() {
    console.info('show?')
    newTagModal.show();
  }
  var hideNewTagModal = function () {
    console.info('hide?')
    newTagModal.hide();
  }
</script>