<div class="row">
  <% current_user.tags.each do |tag| %>
    <div class='col-sm-2'><%= tag.tag %> :: <%= number_to_currency(current_user.total_by(tag.tag)) %></div>
  <% end %>
</div>
<div class="row">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Description</th>
        <th>Debit</th>
        <th>Credit</th>
        <th>Tags</th>
      </tr>
    </thead>
    <tbody>
      <% current_user.user_transactions.order('transaction_date desc').each do |trans| %>
        <tr>
          <td><%= trans.transaction_date %></td>
          <td><%= trans.description %></td>
          <td><%= trans.debit %></td>
          <td><%= trans.credit %></td>
          <td><% trans.tags.each do |tag| %><%= tag.tag %><% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>